{
  "name": "goal-controller-monorepo",
  "version": "1.0.0",
  "description": "Controller Synthesis from Goal Models - Monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "onlyBuiltDependencies": []
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:goal-tree\" \"pnpm run dev:lib\" \"pnpm run dev:ui\"",
    "dev:goal-tree": "pnpm --filter @goal-controller/goal-tree run watch",
    "dev:lib": "pnpm --filter @goal-controller/lib run watch",
    "dev:ui": "pnpm --filter @goal-controller/ui run dev",
    "build": "pnpm run build:goal-tree && pnpm run build:lib && pnpm run build:ui",
    "build:goal-tree": "pnpm --filter @goal-controller/goal-tree run build",
    "build:lib": "pnpm --filter @goal-controller/lib run build",
    "build:ui": "pnpm --filter @goal-controller/ui run build",
    "test": "pnpm run build:goal-tree && pnpm --filter @goal-controller/lib run test",
    "grammar": "cd packages/lib && make grammar",
    "clean": "pnpm --recursive run clean && rm -rf node_modules packages/*/node_modules",
    "setup-hooks": "bash hooks/setup.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vieirin/goal-controller.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vieirin/goal-controller/issues"
  },
  "homepage": "https://github.com/vieirin/goal-controller#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.8.3",
    "vercel": "^50.4.11"
  }
}
