// ===================================================================
// Basic sanity
// ===================================================================
P=? [ F G0_achieved=1 ];
P>0 [ F G2_achieved=1 ];
P>=1 [ G (R1>=0 & R1<=5) ];


// ===================================================================
// Interleaved G1 # G2
// ===================================================================
P>0 [ F (G1_pursued=1 & G2_pursued=0) ];
P>0 [ F (G2_pursued=1 & G1_pursued=0) ];
P>=1 [ G (G0_achieved=1 => G2_achieved=1) ];


// ===================================================================
// G1: maintain(sampleLoaded)
// ===================================================================
filter(forall,
       P<=0 [ X (G1_pursued=1) ],
       G1_pursued=0 & G1_achieved_maintain=true);

P>0 [ F (G1_pursued=1 & sampleLoaded) ];
P>0 [ F (!sampleLoaded) ];


// ===================================================================
// G2: [G13 ; G6]
// ===================================================================
P>=1 [ G (G6_pursued=1 => G13_achieved=1) ];
P>0 [ F (G2_achieved=1 & G13_achieved=1 & G6_achieved=1) ];


// ===================================================================
// G13: choice
// ===================================================================
P>=1 [ G !(G3_pursued=1 & G4_pursued=1) ];
P>0 [ F (G13_pursued=1 & G3_pursued=1) ];
P>0 [ F (G13_pursued=1 & G4_pursued=1) ];
P>=1 [ G (G13_achieved=1 => (G3_achieved=1 | G4_achieved=1)) ];


// ===================================================================
// G5 sequential chain
// ===================================================================
P>=1 [ G (G8_pursued=1 => G7_achieved=1) ];
P>=1 [ G (G9_pursued=1 => (G7_achieved=1 & G8_achieved=1)) ];


// ===================================================================
// G4 / T5 resource guard
// ===================================================================
P>0 [ F (G4_achieved=1 & T5_achieved=1) ];


// ===================================================================
// G6 [G10 ; G11 ; G12]
// ===================================================================

// G12 only after G10 and maintain condition
filter(forall,
       P<=0 [ X (G12_pursued=1) ],
       G12_pursued=0 & G12_achieved=0 & (G10_achieved=0 | !analysisEnded));

// G6 completion implies its sequential children completed
P>=1 [ G (G6_achieved=1 => (G10_achieved=1 & G12_achieved=1)) ];

P>0 [ F (G6_achieved=1 & analysisEnded) ];


// ===================================================================
// Resource-guarded tasks
// ===================================================================
filter(forall, P<=0 [ X (T6_pursued=1) ], T6_pursued=0 & T6_achieved=0 & R1<2);
P>0 [ F G10_achieved=1 ];

filter(forall, P<=0 [ X (T7_pursued=1) ], T7_pursued=0 & T7_achieved=0 & !sampleLoaded);

filter(forall, P<=0 [ X (T9_pursued=1) ], T9_pursued=0 & T9_achieved=0 & R1<2);
P>0 [ F (G12_achieved=1 & T9_achieved=1) ];


// ===================================================================
// Context side-effects
// ===================================================================
P>0 [ F (T4_achieved=1 & sampleLoaded) ];
P>0 [ F (T5_achieved=1 & sampleLoaded) ];
P>0 [ F (T9_achieved=1 & !sampleLoaded) ];
P>0 [ F (R1<5) ];
P>0 [ F (R1<=2) ];